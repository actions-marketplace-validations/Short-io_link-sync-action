{
  "name": "shortio-link-sync-action",
  "version": "1.0.0",
  "description": "GitHub Action to sync short links from shortio.yaml to Short.io",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "github-action",
    "short.io",
    "url-shortener",
    "link-management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.19.8",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  }
}
