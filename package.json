{
  "name": "shortio-link-sync-action",
  "version": "1.2.0",
  "description": "GitHub Action to sync short links from shortio.yaml to Short.io",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "github-action",
    "short.io",
    "url-shortener",
    "link-management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^2.0.2",
    "@short.io/client-node": "^3.2.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "esbuild": "^0.27.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
